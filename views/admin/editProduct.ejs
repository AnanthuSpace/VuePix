                document.getElementById('Pprice').style.borderColor = 'red'
                document.getElementById('Pprice').style.borderWidth = '1px'
                event.preventDefault()
            }

            const unitRegex = /^\d+$/;

            if (unitRegex.test(unit)) { } else {
