    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var productPerMonth = <%= JSON.stringify(productPerMonth) %>;
            var monthlySalesArray = <%= JSON.stringify(monthlySalesArray) %>;
            var userData = <%= JSON.stringify(userPerMonth) %>;
            var ctx = document.getElementById('myChart').getContext('2d');

            var existingChart = Chart.getChart(ctx);
            if (existingChart) {
                existingChart.destroy();
            }
            // alert('Before initializing Chart');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Products',
                        tension: 0.3,
                        fill: true,
                        backgroundColor: 'rgba(44, 120, 220, 0.2)',
                        borderColor: 'rgba(44, 120, 220)',
                        data: productPerMonth
                    },
                    {

                        label: 'Sales',
                        tension: 0.3,
                        fill: true,
                        backgroundColor: 'rgba(4, 209, 130, 0.2)',
                        borderColor: 'rgb(4, 209, 130)',
                        data: monthlySalesArray,
                    },
                    {
                        label: 'Users',
                        data: userData,
                        backgroundColor: '#e28743',
                        borderColor: '#873e23',
                        borderWidth: 2,
                        pointRadius: 4,
                        pointBackgroundColor: '#21130d',
                        pointBorderColor: '#fff',
                        pointHoverRadius: 6,
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(75, 192, 192, 1)',
                        fill: {
                            target: 'origin',
                            above: 'rgba(75, 192, 192, 0.2)',
                            below: 'rgba(75, 192, 192, 0)'
                        },
                        tension: 0.4
                    }
                    ]
                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true,
                            },
                        }
                    }
                }


            });
            // alert('After initializing Chart');
        });

    </script>



